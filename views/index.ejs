<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Country capital | Web dev</title>
    <link rel="stylesheet" href="styles/style.css">
    <link rel="stylesheet" href="styles/responsive.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <div id="main">
        <div id="loader">
            <h1>Quiz
                <span><i class="fa-solid fa-circle" id="load1"></i></span>
                <span><i class="fa-solid fa-circle" id="load2"></i></span>
                <span><i class="fa-solid fa-circle" id="load3"></i></span>
            </h1>
        </div>
        <div class="container">
            <form action="/submit" method="post">
                <div class="box1 box">
                    <h2>Total Score:
                        <span id="score">
                            <%= locals.totalScore ? totalScore : "0" %>
                        </span>
                    </h2>
                </div>
                <div class="box2 box">
                    <h1 id="Country">
                        <%= question.country %>
                    </h1>
                </div>
                <div class="box3 box">

                    <input type="text" name="answer" id="capital" placeholder="Enter the capital" autofocus
                        autocomplete="off" required>
                </div>
                <div class="box4 box">
                    <button type="submit">Submit
                        <% if(locals.wasCorrect){ %>
                            <span>
                                <i id="green" class="fa-solid fa-check"></i>
                            </span>
                            <% } else if (locals.wasCorrect===false) {%>
                                <span>
                                    <i id="red" class="fa-solid fa-xmark"></i>
                                </span>
                                <%} %>
                    </button>
                </div>
            </form>

        </div>
    </div>


    <!-- ADDING JAVASCRIPT FILE FOR FORNTEND LOGIC -->
    <script>
        var wasCorrect = "<%= locals.wasCorrect %>";
        console.log(wasCorrect)
        if (wasCorrect === "false") {
            document.getElementById("main").innerHTML = `<div class="result-container container"><h2>Game over! Final best score: <%= locals.totalScore %></h2><a href="/" class="restart-button">Restart</a></div>`
        }
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="JS/index.js"></script>
</body>

</html>